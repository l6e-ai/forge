FROM node:22-alpine

# Set working directory to the UI app
WORKDIR /app/site/agent-ui

# Ensure Vite binds to all interfaces inside the container
ENV HOST=0.0.0.0

EXPOSE 5173

# Install deps on container start (works with bind-mounted source)
CMD ["sh", "-c", "npm ci && npm run dev -- --host 0.0.0.0"]


